<% flash.each do |key, value| %>
  <% if key == "success" %>
    <script>
    $(document).on("ready page:load", function() {
      value = '<%= value %>'
      toastr.success(value);
    });
    </script>
  <% elsif key == "error" %>
    <script>
      $(document).on("ready page:load", function() {
        value = '<%= value %>'
        toastr.error(value);
      });
    </script>
  <% else %>
    <script>
      $(document).on("ready page:load", function() {
        value = '<%= value %>'
        toastr.info(value);
      });
    </script>
  <% end %>
<% end %>

<!-- DISPLAY ERRORS AS NOTIFICATIONS -->
<% if !@errors.nil? %>
  <% @errors.each do |error| %>
    <script>
      $(document).on("ready page:load", function() {
        value = '<%= error %>'
        toastr.error(value);
      });
    </script>
  <% end %>
<% end %>

